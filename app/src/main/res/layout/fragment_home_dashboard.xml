<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1) Плашка: дата + календарь -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#111C38"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20.06.2025"
                    android:textColor="#EAF0FF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btnPickDate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:tint="#8CCBFF"
                    android:contentDescription="@null"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2) Плашка: цель -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#111C38"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal: Lose Fat"
                    android:textColor="#8CCBFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/textTargetRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target: 2,300–2,500 kcal"
                    android:textColor="#EAF0FF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3) Плашка: прогресс за сегодня -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#111C38"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories consumed: 0 / 0 kcal"
                    android:textColor="#EAF0FF"
                    android:textSize="14sp"/>

                <!-- Proteins -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Proteins"
                        android:textColor="#EAF0FF"/>

                    <TextView
                        android:id="@+id/textProteinCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#BFD7FF"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressProtein"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#F4A62A"
                    android:layout_marginTop="6dp"/>

                <!-- Fats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fats"
                        android:textColor="#EAF0FF"/>

                    <TextView
                        android:id="@+id/textFatCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#BFD7FF"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressFat"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#E25D5D"
                    android:layout_marginTop="6dp"/>

                <!-- Carbs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Carbohydrates"
                        android:textColor="#EAF0FF"/>

                    <TextView
                        android:id="@+id/textCarbCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#BFD7FF"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressCarb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#19B39A"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4) Плашка: приёмы пищи (сетка) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMealsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingTop="4dp"/>

        <Button
            android:id="@+id/btnNewPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Plan"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
