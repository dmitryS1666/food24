<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1) Плашка: дата + календарь -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#111C38"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20.06.2025"
                    android:textColor="#EAF0FF"
                    android:textSize="18sp"/>

                <ImageButton
                    android:id="@+id/btnPickDate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/i_calendar"
                    android:contentDescription="@null"
                    app:tint="#8CCBFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2) Плашка: цель -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#111C38"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Goal -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal:"
                        android:textColor="#3890F5"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maintain"
                        android:textColor="#EAF0FF"
                        android:textSize="18sp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>

                <!-- Target -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target:"
                        android:textColor="#3890F5"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textTargetRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,300–2,500 kcal"
                        android:textColor="#EAF0FF"
                        android:textSize="18sp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3) Плашка: прогресс за сегодня -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#111C38"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header: Calories consumed: 1850 / 2400 kcal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCaloriesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories consumed:"
                        android:textColor="#3890F5"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="0 / 0 kcal"
                        android:textColor="#EAF0FF"
                        android:textSize="18sp"/>
                </LinearLayout>

                <!-- Proteins row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Proteins"
                        android:textColor="#EAF0FF"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/textProteinCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#BFD7FF"
                        android:textSize="15sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressProtein"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressDrawable="@drawable/pb_protein_rounded"/>

                <!-- Fats row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fats"
                        android:textColor="#EAF0FF"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/textFatCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#BFD7FF"
                        android:textSize="15sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressFat"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressDrawable="@drawable/pb_fat_rounded"/>

                <!-- Carbs row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Carbohydrates"
                        android:textColor="#EAF0FF"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/textCarbCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#BFD7FF"
                        android:textSize="15sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressCarb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressDrawable="@drawable/pb_carb_rounded"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4) Плашка: приёмы пищи (сетка) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMealsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingTop="4dp"/>

        <Button
            android:id="@+id/btnNewPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Plan"
            android:layout_marginBottom="12dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
