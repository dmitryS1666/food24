<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <!-- Шапка: назад + заголовок + заглушка под правый отступ -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="6dp"
                android:text="Weight Progress"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/abc_action_bar_home_description"
                android:src="@drawable/ic_arrow_back" />
        </LinearLayout>

        <!-- Карточка: текущий/целевой/прогресс -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="12dp"
            android:background="#111C38"
            android:clipToOutline="true"
            android:elevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textCurrentWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current weight: 0.0 kg"
                android:textColor="#8CCBFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textTargetWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Target weight: —"
                android:textColor="#EAF0FF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Progress: —"
                android:textColor="#EAF0FF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Линейный график веса -->
        <com.food24.track.ui.progress.LineChartView
            android:id="@+id/weightChart"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="12dp"
            android:background="#111C38" />

        <!-- Кнопка добавления веса -->
        <TextView
            android:id="@+id/actionAddWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="+  Add Weight Entry"
            android:textColor="#3890F5"
            android:textSize="16sp" />

        <!-- Карточка: прогресс по калориям -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#111C38"
            android:clipToOutline="true"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textCalGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal: — kcal/day"
                android:textColor="#8CCBFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textCalAvg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Average intake (7 days): — kcal"
                android:textColor="#EAF0FF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textCalHits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Hit target: —"
                android:textColor="#EAF0FF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Тоггл Week/Month -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="8dp"
            android:background="#1A264A"
            android:clipToOutline="true"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/tabWeek"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#3890F5"
                android:gravity="center"
                android:text="Week"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tabMonth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#111C38"
                android:gravity="center"
                android:text="Month"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Бар-чарт калорий -->
        <com.food24.track.ui.progress.BarChartView
            android:id="@+id/calorieChart"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#111C38" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_button"
            android:text="Reset Progress"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>