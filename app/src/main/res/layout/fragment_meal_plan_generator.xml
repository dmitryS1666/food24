<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="6dp"
            android:text="Goal"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/abc_action_bar_home_description"
            android:src="@drawable/ic_arrow_back" />

        <RadioGroup
            android:id="@+id/groupGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <include layout="@layout/item_radio_option"
                android:id="@+id/itemGain"/>
            <include layout="@layout/item_radio_option"
                android:id="@+id/itemLoss"/>
            <include layout="@layout/item_radio_option"
                android:id="@+id/itemMaintain"/>
        </RadioGroup>

        <!-- Activity level -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity level"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerActivity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:popupBackground="#0B0F2A"
            android:spinnerMode="dropdown"/>

        <!-- Metabolism -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metabolism"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your weight"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/editWeight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_input"
            android:hint="Enter your current weight"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9DB3E5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your height"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/editHeight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_input"
            android:hint="Enter your height"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9DB3E5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your age"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/editAge"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_input"
            android:hint="Enter your age"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9DB3E5" />

        <!-- Number of meals -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of meals"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="18dp"/>

        <RadioGroup
            android:id="@+id/groupMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <include layout="@layout/item_radio_option"
                android:id="@+id/itemMeals3"/>
            <include layout="@layout/item_radio_option"
                android:id="@+id/itemMeals4"/>
            <include layout="@layout/item_radio_option"
                android:id="@+id/itemMeals5"/>
        </RadioGroup>

        <!-- Generate for -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate for"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="18dp"/>

        <Spinner
            android:id="@+id/spinnerDays"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:popupBackground="#0B0F2A"
            android:spinnerMode="dropdown"/>

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Plan Now"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button"/>
    </LinearLayout>
</ScrollView>
