<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F2A"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок + Clear -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- строка: Заголовок + Clear Checked -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shopping List"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <LinearLayout
                android:id="@+id/actionClearChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:enabled="false">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    app:tint="#3890F5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear Checked"
                    android:textColor="#3890F5"
                    android:paddingStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- строка: Назад -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/abc_action_bar_home_description"
            android:src="@drawable/ic_arrow_back" />
    </LinearLayout>

    <!-- Пустой плейсхолдер -->
    <TextView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your shopping list is empty"
        android:textColor="#9DB3E5"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />

    <!-- Секции категорий -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- Кнопка снизу -->
    <TextView
        android:id="@+id/btnAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+  Add Product"
        android:textColor="#8CCBFF"
        android:textSize="16sp" android:padding="12dp" />
</LinearLayout>
